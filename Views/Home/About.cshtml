@using MVC_oficinas.Models
@model AboutViewModel

     <!-- about section -->

  <section class="about_section layout_padding">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="detail-box">
            <div class="heading_container">
              <h2>
                @Model.titulo
              </h2>
            </div>
            <h5>
                @Model.subtitulo
            </h5>
            <p>
                @Model.description
            </p>
            
          </div>
        </div>
        <div class="col-md-6">
          <div class="img-box">
            <img src="@Model.image" alt="">
          </div>
        </div>
      </div>
    </div>
  </section>
   <!-- end about section -->
