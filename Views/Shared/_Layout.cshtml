@using MVC_oficinas.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Oficina Pimpolho</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OficinaPimpolho.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Início da seção de cabeçalho -->
        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container pt-3">
                    <a class="navbar-brand mr-5" asp-controller="Home" asp-action="Index">

                        <span style="color:#e93f1a;">

                            AGENDACAR

                        </span>
                    </a>
                <!-- Início da barra de navegação -->
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <div class="d-flex ml-auto flex-column flex-lg-row align-items-center">
                            <ul class="navbar-nav  ">
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-controller="Marcacoes" asp-action="Index">MARCAÇÕES</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-black" asp-controller="Oficinas" asp-action="Index">OFICINAS</a>
                                </li>
                                <partial name="_LoginPartial" />
                                
                            </ul>
                        </div>
                    </div>
                <!-- Fim da barra de navegação -->
                </nav>
            </div>
        </header>
    <!-- Fim da seção de cabeçalho -->
    <!-- Renderiza o corpo da página -->
    <div class="container"> 
        <main role="main" class="pb-3">
            @RenderBody() 
        </main>
    </div>
    <!-- Início dos scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script> <!-- Importa o jQuery -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> <!-- Importa os scripts do Bootstrap -->
    <script src="~/js/site.js" asp-append-version="true"></script> <!-- Importa um arquivo de script personalizado -->
    @await RenderSectionAsync("Scripts", required: false) <!-- Renderiza uma seção de scripts opcionais -->
    <!-- Fim dos scripts -->
</body>
</html>
